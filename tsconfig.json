{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "src/utils/date-methods.ts", "src/utils/query-helper.ts", "src/utils/hash-helper.ts", "src/utils/result-code.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}